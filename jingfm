#!/usr/bin/env node

/**
 * Module dependencies.
 */
var program = require('commander');
var fs = require('fs');
var request = require('request');
var getUrl = require('./lib/getUrl');
var exec = require('child_process').exec;
var child;

program
    .version('0.0.1')
    .option('-u, --username [username]', 'Email')
    .option('-p, --password [password]', 'Password')
    .option('-k, --keywords [keywords]', 'Keywords')
    .command('play')
    .description('Try to play a song from Jing.fm')
    .action(function(options) {
        var username = options.parent.username;
        var password = options.parent.password;
        var keywords = options.parent.keywords;
        if (!username || !password) {
            console.log('请输入用户名或密码！');
            return;
        }
        if (!keywords) {
            console.log('请输入关键字！')
            return;
        }
        console.log('尝试登录到 Jing.fm ...');
        getUrl(username, password, keywords).then(function(urls) {
            play(urls);
        }, function(err) {
            console.log(err);
        });
    })
    .usage('jingfm play [options]')
    .on('--help', function() {
        console.log(' Example');
        console.log();
        console.log(' $ ./jingfm play -u xvfeng -p xvfeng -k Rock');
        console.log();
    });

program.parse(process.argv);

/**
 * Open the song in the browser
 *
 * @param  {[string]} url
 */
function play(urls) {
    console.log('正在打开！');
    child = exec('mplayer ' + urls, {
        maxBuffer: 20000*1024
    }, function(error, stdout, stderr) {
        if(error) console.log(error);
        console.log('播放完毕!！');
    });
}
